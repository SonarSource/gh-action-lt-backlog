{
  "name": "backlog-automation",
  "version": "1.0.0",
  "description": "BacklogAutomation",
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "format": "prettier --write \"**/*.ts\""
  },
  "devDependencies": {
    "@types/node": "^14.18.33",
    "prettier": "^2.8.4",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  }
}
